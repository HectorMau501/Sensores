<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnListado"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="clickListado"
            android:text="Listado de Sensores" />

        <Button
            android:id="@+id/btnMargnetico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="clickMagnetico"
            android:text="Sensor Magnetico" />

        <Button
            android:id="@+id/btnProximidad"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="clickProximidad"
            android:text="Sensor de Proximidad" />

        <Button
            android:id="@+id/btnGravedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickMovimiento"
            android:text="Sensor de Gravedad" />

        <Button
            android:id="@+id/btnPosicion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickPosicion"
            android:text="Sensor de Posicion" />

        <TextView
            android:id="@+id/txtDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:text="Sensores del Dispositivo:"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>